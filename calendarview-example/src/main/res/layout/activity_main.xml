<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/title"
            android:text="@string/example"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignBottom="@+id/adapter_selector"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:paddingTop="2dp"
            android:gravity="center"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/adapter_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/title"
            android:layout_toEndOf="@+id/title"
            />

        <!-- Calendar -->
        <com.nirigo.mobile.view.calendar.CalendarView
            android:id="@+id/calendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp" />


        <!-- Custom controls -->
        <Button
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/calendar"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="@string/back" />

        <Button
            android:id="@+id/forward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/calendar"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:text="@string/forward" />

        <EditText
            android:id="@+id/jump"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/jump_hint"
            android:layout_below="@+id/calendar"
            android:layout_toRightOf="@+id/back"
            android:layout_toEndOf="@+id/back"
            android:layout_toLeftOf="@+id/forward"
            android:layout_toStartOf="@+id/forward"
            android:layout_alignBottom="@+id/back"
            android:gravity="center"
            android:inputType="date" />

    </RelativeLayout>
</ScrollView>
